{
    "name": "@attilagyongyosi/path-linter",
    "version": "2.0.0",
    "description": "Linter for consistent directory and file naming",
    "main": "lib/index.js",
    "author": "attilagyongyosi <attilagyongyosi0@gmail.com>",
    "scripts": {
        "deps:check": "ncu",
        "clean": "rimraf ./lib",
        "lint:ts": "eslint src/**/*.ts",
        "lint:paths": "path-linter --colorize",
        "lint": "run-p lint:*",
        "build": "parcel build src/index.ts --no-source-maps --target node --out-dir lib && chmod +x lib/index.js",
        "test-run:default": "yarn build && node lib/index.js",
        "test-run": "yarn build && node lib/index.js --config sample-config.json --colorize",
        "test:unit": "jest --runInBand && yarn test:badges:unit",
        "test:integration": "yarn build && jest --runInBand -c jest.integration.config.js",
        "test": "yarn test:unit && yarn test:integration",
        "test:badges:unit": "yarn jest-coverage-badges --input generated/jest-coverage/unit/coverage-summary.json --output badges/coverage-unit",
        "release:patch": "release-it patch",
        "release:minor": "release-it minor",
        "release:major": "release-it major",
        "release:major:pre": "npm run release:major -- --preRelease=rc"
    },
    "files": [
        "lib"
    ],
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/attilagyongyosi/path-linter"
    },
    "bugs": {
        "url": "https://github.com/attilagyongyosi/path-linter/issues"
    },
    "bin": {
        "path-linter": "lib/index.js"
    },
    "keywords": [
        "lint",
        "linter",
        "filenames",
        "path",
        "code style",
        "convention"
    ],
    "homepage": "https://github.com/attilagyongyosi/path-linter",
    "private": false,
    "devDependencies": {
        "@attilagyongyosi/path-linter": "2.0.0-rc.2",
        "@attilagyongyosi/eslint-config": "0.3.0",
        "@commitlint/cli": "8.2.0",
        "@commitlint/config-conventional": "8.2.0",
        "@types/node": "10.14.19",
        "@types/jest": "24.0.19",
        "@typescript-eslint/parser": "2.4.0",
        "@typescript-eslint/eslint-plugin": "2.4.0",
        "eslint": "6.5.1",
        "husky": "3.0.9",
        "jest": "24.9.0",
        "jest-coverage-badges": "1.1.2",
        "npm-run-all": "4.1.5",
        "npm-check-updates": "3.1.24",
        "parcel-bundler": "1.12.4",
        "parcel-plugin-shebang": "1.2.8",
        "release-it": "12.4.3",
        "rimraf": "3.0.0",
        "ts-jest": "24.1.0",
        "typescript": "3.6.4"
    }
}
