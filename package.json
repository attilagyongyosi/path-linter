{
    "name": "path-linter",
    "version": "0.1.0",
    "description": "Linter for consistent directory and file naming",
    "main": "lib/index.js",
    "author": "attilagyongyosi <attilagyongyosi0@gmail.com>",
    "license": "UNLICENSED",
    "private": false,
    "scripts": {
        "clean": "rimraf ./lib",
        "lint": "tslint -p tsconfig.json",
        "build": "yarn lint && yarn clean && webpack --config ./webpack.config.ts",
        "test": "jest",
        "test:integration": "yarn build && yarn test integration"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint",
            "pre-push": "yarn test && yarn build"
        }
    },
    "devDependencies": {
        "babel-core": "6.26.3",
        "@types/node": "10.5.1",
        "@types/jest": "23.3.0",
        "@types/webpack": "4.4.8",
        "awesome-typescript-loader": "5.2.0",
        "husky": "1.0.0-rc.9",
        "jest": "23.4.1",
        "rimraf": "2.6.2",
        "ts-jest": "23.0.0",
        "ts-node": "7.0.0",
        "tslint": "5.10.0",
        "typescript": "2.9.2",
        "webpack": "4.16.3",
        "webpack-cli": "3.1.0"
    }
}
