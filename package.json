{
    "name": "@attilagyongyosi/path-linter",
    "version": "1.2.0",
    "description": "Linter for consistent directory and file naming",
    "main": "lib/index.js",
    "author": "attilagyongyosi <attilagyongyosi0@gmail.com>",
    "scripts": {
        "clean": "rimraf ./lib",
        "copy:files": "copyfiles package.json README.md LICENSE.md lib",
        "lint": "eslint src/**/*.ts",
        "build": "parcel build src/index.ts --target node --out-dir lib && chmod +x lib/index.js",
        "test-run:default": "yarn build && node lib/main.js",
        "test-run": "yarn build && node lib/main.js --config sample-config.json",
        "test:unit": "jest --runInBand",
        "test:integration": "yarn build && jest --runInBand -c jest.integration.config.js",
        "test": "yarn test:unit && yarn test:integration",
        "release:patch": "release-it patch",
        "release:minor": "release-it minor"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/attilagyongyosi/path-linter"
    },
    "bugs": {
        "url": "https://github.com/attilagyongyosi/path-linter/issues"
    },
    "bin": {
        "path-linter": "lib/index.js"
    },
    "keywords": [
        "lint",
        "linter",
        "filenames",
        "path",
        "code style",
        "convention"
    ],
    "homepage": "https://github.com/attilagyongyosi/path-linter",
    "private": false,
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "yarn lint",
            "pre-push": "yarn test && yarn build"
        }
    },
    "shebang": [{
        "interpreter": "node",
        "files": [ "./src/index.ts" ]
    }],
    "release-it": {
        "git": {
            "requireUpstream": false
        }
    },
    "devDependencies": {
        "@attilagyongyosi/eslint-config": "0.2.0",
        "@commitlint/cli": "8.2.0",
        "@commitlint/config-conventional": "8.2.0",
        "@types/node": "10.14.19",
        "@types/jest": "24.0.18",
        "@typescript-eslint/parser": "2.3.1",
        "@typescript-eslint/eslint-plugin": "2.3.1",
        "copyfiles": "2.1.1",
        "eslint": "6.4.0",
        "husky": "3.0.5",
        "jest": "24.9.0",
        "parcel-bundler": "1.12.3",
        "parcel-plugin-shebang": "1.2.8",
        "release-it": "12.4.1",
        "rimraf": "3.0.0",
        "ts-jest": "24.1.0",
        "typescript": "3.6.3"
    }
}
