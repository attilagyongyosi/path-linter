{
    "name": "path-linter",
    "version": "0.1.0",
    "description": "Linter for consistent directory and file naming",
    "main": "dist/index.js",
    "author": "attilagyongyosi <attilagyongyosi0@gmail.com>",
    "license": "UNLICENSED",
    "private": false,
    "scripts": {
        "clean": "rimraf ./dist",
        "lint": "tslint -p tsconfig.json",
        "build": "yarn lint && yarn clean && tsc"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint",
            "pre-push": "yarn build"
        }
    },
    "devDependencies": {
        "@types/node": "10.5.1",
        "husky": "1.0.0-rc.9",
        "rimraf": "2.6.2",
        "tslint": "5.10.0",
        "typescript": "2.9.2"
    }
}
